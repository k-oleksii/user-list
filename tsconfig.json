{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@src/*": ["src/*"]
    },
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ES6",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/helpers/debounce.ts"],
  "exclude": ["node_modules", "build", "public"]
}
